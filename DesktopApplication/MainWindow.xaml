<Window x:Class="DesktopApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Content="Manage Groups" DockPanel.Dock="Top" Click="ManageGroups_Click" Margin="5"/>
            <Button Content="Manage Teachers" DockPanel.Dock="Top" Click="ManageTeachers_Click" Margin="5"/>
            <Button Content="Manage Students" DockPanel.Dock="Top" Click="ManageStudents_Click" Margin="5"/>
            <Button Content="Manage Courses" DockPanel.Dock="Top" Click="ManageCourses_Click" Margin="5"/>
            <Button Content="Main Window" Click="ReturnToMainWindow_Click" Margin="5"/>
        </StackPanel>

        <Frame x:Name="MainFrame" DockPanel.Dock="Top" JournalOwnership="OwnsJournal"/>
    </DockPanel>
</Window>
